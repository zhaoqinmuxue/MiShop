<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_jump"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/border_circle_timer"
        android:text="跳过"/>

    <com.youth.banner.Banner
        android:id="@+id/banner_scroll_launcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:image_scale_type="fit_center"
        app:indicator_width="8dp"
        app:indicator_height="8dp"
        app:indicator_margin="4dp"
        app:indicator_drawable_selected="@drawable/indicator_selected"
        app:indicator_drawable_unselected="@drawable/indicator_unselected">

    </com.youth.banner.Banner>
</FrameLayout>